<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/item_distance">
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="0dp" android:contentDescription="TODO" 
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp" android:layout_weight="2"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="租"
                    android:textColor="@color/btnSuccess"/>

                <TextView
                    android:id="@+id/rentPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/RMB" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="售"
                    android:textColor="@color/btnDanger"/>

                <TextView
                    android:id="@+id/sellPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/RMB" />
            </LinearLayout>
            <TextView
                android:id="@+id/release_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/text_margin"
                android:text="发布时间:" />
        </LinearLayout>
            <CheckBox
                android:id="@+id/manageCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="true"/>
    </LinearLayout>
</android.support.v7.widget.CardView>